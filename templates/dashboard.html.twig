{% extends "base.html.twig" %}

{% block title %}Dashboard
{% endblock %}

{% block content %}
	<div class="min-h-screen bg-gray-100 flex justify-center items-center p-4">
		<div class="w-full max-w-[1440px] mx-auto bg-white shadow-md rounded-xl p-8">
			<h1 class="text-2xl font-bold text-gray-800 text-center mb-2">
				Welcome,
				<span id="user-name" class="text-blue-600"></span>!
			</h1>
			<p class="text-gray-600 text-center mb-8">
				Here&apos;s an overview of your tickets!ðŸš€
			</p>

			<!-- Ticket Stats -->
			<div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-3xl mx-auto mb-8 capitalize">
				<div class="bg-blue-50 border border-blue-200 rounded-lg p-5 text-center">
					<h3 class="text-lg font-semibold text-blue-700">Total Tickets</h3>
					<p id="total-tickets" class="text-3xl font-bold mt-2">0</p>
				</div>
				<div class="bg-green-50 border border-green-200 rounded-lg p-5 text-center">
					<h3 class="text-lg font-semibold text-green-700">Open Tickets</h3>
					<p id="open-tickets" class="text-3xl font-bold mt-2">0</p>
				</div>
				<div class="bg-amber-50 border border-amber-200 rounded-lg p-5 text-center">
					<h3 class="text-lg font-semibold text-amber-700">Tickets in Progress</h3>
					<p id="inprogress-tickets" class="text-3xl font-bold mt-2">0</p>
				</div>
				<div class="bg-gray-50 border border-gray-200 rounded-lg p-5 text-center">
					<h3 class="text-lg font-semibold text-gray-700">Closed Tickets</h3>
					<p id="closed-tickets" class="text-3xl font-bold mt-2">0</p>
				</div>
			</div>

			<!-- Actions -->
			<div class="flex flex-col sm:flex-row gap-3 justify-center text-center">
				<a href="/tickets" class="w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-300 ease-in-out">
					Manage Tickets
				</a>
				<button id="logout-btn" class="logout-btn w-full sm:w-auto bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-md transition duration-300 ease-in-out cursor-pointer">
					Logout
				</button>
			</div>
		</div>
	</div>
{% endblock %}
{% block scripts %}
  <script type="module" src="/public/dashboard.js"></script>
{% endblock %}
