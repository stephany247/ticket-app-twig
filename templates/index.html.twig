{% extends "base.html.twig" %}

{% block title %}Ticket App
{% endblock %}

{% block content %}
	<main
		class="min-h-screen flex flex-col">
		{# HERO SECTION  #}
		<header
			class="relative overflow-hidden bg-white">
			{# Decorative circles #}
			<div aria-hidden="true" class="hidden md:block absolute -left-20 -top-10 w-56 h-56 rounded-full bg-gradient-to-br from-blue-200 to-transparent opacity-60 transform rotate-12 pointer-events-none"></div>
			<div aria-hidden="true" class="absolute right-6 top-8 w-32 h-32 rounded-full bg-gradient-to-br from-indigo-100 to-transparent opacity-60 pointer-events-none"></div>

			<div class="max-w-360 mx-auto px-6 md:px-8 lg:px-12">
				<div class="pt-20 grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
					<div class="z-10">
						<h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-gray-900 leading-tight">
							TicketPro — Manage issues, faster.
						</h1>
						<p class="mt-5 text-gray-600 md:max-w-lg mx-auto md:mx-0 text-base sm:text-lg">
							Streamline your support and development workflow. Create, track, and resolve tickets with ease — all in one intuitive dashboard.
						</p>

						<div class="mt-6 flex flex-col sm:flex-row gap-3">
							<a href="/auth/login" class="inline-flex items-center justify-center px-4 py-2 rounded-lg border border-transparent bg-blue-600 text-white font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
								Login
							</a>
							<a href="/auth/register" class="inline-flex items-center justify-center px-4 py-2 rounded-lg border border-blue-600 bg-white text-blue-600 font-medium hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
								Get Started
							</a>
						</div>
					</div>

					{# Right section  #}
					<div class="relative">
						<div class="relative block">
							<div class="bg-gradient-to-br from-blue-50 to-white rounded-2xl p-8 shadow-lg space-y-6">
								<div class="bg-white rounded-xl p-4 shadow-sm border-l-4 border-green-400">
									<h3 class="font-semibold text-gray-800">Open Tickets</h3>
									<p class="text-sm text-gray-500 mt-1">
										Monitor active issues and respond quickly.
									</p>
								</div>
								<div class="bg-white rounded-xl p-4 shadow-sm border-l-4 border-amber-400">
									<h3 class="font-semibold text-gray-800">View Progress</h3>
									<p class="text-sm text-gray-500 mt-1">
										Stay updated on what&apos;s being handled.
									</p>
								</div>
								<div class="bg-white rounded-xl p-4 shadow-sm border-l-4 border-gray-400">
									<h3 class="font-semibold text-gray-800">Close Tickets</h3>
									<p class="text-sm text-gray-500 mt-1">
										Track resolution history for quality improvement.
									</p>
								</div>
							</div>
						</div>
						<div class="hidden sm:block absolute -bottom-6 -right-6 w-20 h-20 rounded-full bg-gradient-to-tr from-indigo-200 to-transparent opacity-60 pointer-events-none"></div>
					</div>
				</div>
			</div>

			{# Wave SVG #}
			<div class="w-full overflow-hidden">
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 1440 320">
					<path fill="#f0f6ff" fill-opacity="1" d="M0,160L24,149.3C48,139,96,117,144,128C192,139,240,181,288,213.3C336,245,384,267,432,245.3C480,224,528,160,576,154.7C624,149,672,203,720,234.7C768,267,816,277,864,256C912,235,960,181,1008,165.3C1056,149,1104,171,1152,149.3C1200,128,1248,64,1296,32C1344,0,1392,0,1416,0L1440,0L1440,320L1416,320C1392,320,1344,320,1296,320C1248,320,1200,320,1152,320C1104,320,1056,320,1008,320C960,320,912,320,864,320C816,320,768,320,720,320C672,320,624,320,576,320C528,320,480,320,432,320C384,320,336,320,288,320C240,320,192,320,144,320C96,320,48,320,24,320L0,320Z"></path>
				</svg>
			</div>
		</header>

		{# FEATURES SECTION #}
		<section class="bg-blue-50 pb-12">
			<div class="max-w-[1440px] mx-auto px-6 md:px-8 lg:px-12">
				<h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
					Why Choose TicketPro?
				</h2>

				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
					{% set features = [
          {'icon': 'fluent-emoji-flat:ticket', 'title': 'Quick Ticket Creation', 'desc': 'Log issues in seconds with streamlined forms and smart validation.'},
          {'icon': 'twemoji:bar-chart', 'title': 'Clear Status Tracking', 'desc': 'Stay on top of open, in-progress, and closed tasks with intuitive tags.'},
          {'icon': 'fluent-color:lock-shield-16', 'title': 'Secure Sessions', 'desc': 'Protected routes ensure only logged-in users can access dashboards.'},
          {'icon': 'streamline-ultimate-color:archive-books', 'title': 'Resolve & Archive', 'desc': 'Close or archive tickets with clear audit-friendly timestamps.'},
          {'icon': 'streamline-color:local-storage-folder', 'title': 'LocalStorage Auth', 'desc': 'Session tokens simulated for simplicity.'},
          {'icon': 'streamline-ultimate-color:responsive-design-1', 'title': 'Responsive Layout', 'desc': 'Looks great on any device — mobile, tablet, or desktop.'}
        ] %}

					{% for f in features %}
						<div class="bg-white rounded-2xl shadow p-6 hover:shadow-md transition">
               <iconify-icon icon="{{ f.icon }}" class="text-4xl"></iconify-icon>
							<h3 class="text-lg font-semibold text-gray-800">{{ f.title }}</h3>
							<p class="mt-2 text-gray-600 text-sm">{{ f.desc }}</p>
						</div>
					{% endfor %}
				</div>
			</div>
		</section>
	</main>
{% endblock %}
